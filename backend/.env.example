# Database Connection 
# Replace 'user', 'password', and 'attendance_db' with your actual PostgreSQL credentials 
DATABASE_URL="postgresql://user:password@localhost:5432/attendance_db?schema=public" 
 
# JWT Secrets (Authentication) 
# Create random long strings for these - they should be different from each other 
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production 
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production 
 
# Server Configuration 
PORT=5000 
NODE_ENV=development 
 
# CORS (Which websites can access the API) 
CORS_ORIGIN=http://localhost:5173,http://localhost:3000 
 
# QR Code Encryption Secret 
QR_CODE_SECRET=your-qr-code-encryption-secret-change-this
