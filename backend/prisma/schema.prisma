// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      UserRole @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  sessionsAsLecturer Session[]     @relation("LecturerSessions")
  courses            Course[]
  attendanceRecords  Attendance[]
  studentId          String?       @unique // Unique Human Readable ID e.g. S12345

  @@map("users")
}

enum UserRole {
  STUDENT
  LECTURER
  ADMIN
}


model Course {
  id          String    @id @default(cuid())
  lecturerId  String
  name        String
  code        String
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  lecturer    User      @relation(fields: [lecturerId], references: [id], onDelete: Cascade)
  sessions    Session[]

  @@unique([lecturerId, code]) // Prevent duplicate codes for same lecturer
  @@map("courses")
}

model Session {
  id        String      @id @default(cuid())
  lecturerId String
  courseId   String?    // Optional link to a course
  name      String
  qrCode    String      @unique
  latitude  Float
  longitude Float
  startTime DateTime    @default(now())
  endTime   DateTime?
  duration  Int         @default(300) // 5 minutes in seconds
  status    SessionStatus @default(ACTIVE)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  deletedAt DateTime?

  // Relations
  lecturer   User         @relation("LecturerSessions", fields: [lecturerId], references: [id], onDelete: Cascade)
  course     Course?      @relation(fields: [courseId], references: [id], onDelete: SetNull) // Option A (Keep session if course deleted)
  attendance Attendance[]

  @@index([lecturerId])
  @@index([courseId])
  @@map("sessions")
}

enum SessionStatus {
  ACTIVE
  ENDED
  EXPIRED
}

model Attendance {
  id        String   @id @default(cuid())
  sessionId String
  studentId String
  scannedAt DateTime @default(now())
  latitude  Float
  longitude Float
  distance  Float    // Distance in meters
  status    AttendanceStatus @default(VALID)
  type      AttendanceType   @default(QR)
  createdAt DateTime @default(now())

  // Relations
  session Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  student User    @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([sessionId, studentId])
  @@index([sessionId])
  @@index([studentId])
  @@map("attendance")
}

enum AttendanceStatus {
  VALID
  INVALID
  OUT_OF_RANGE
  EXPIRED
  DUPLICATE
}

enum AttendanceType {
  QR
  MANUAL
  EXCUSED
}

