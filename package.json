{
  "name": "mobile-attendance-system",
  "version": "1.0.0",
  "description": "Complete attendance management system with mobile and web apps",
  "private": true,
  "scripts": {
    "install:all": "npm run install:backend && npm run install:web && npm run install:mobile",
    "install:backend": "cd backend && npm install",
    "install:web": "cd web && npm install",
    "install:mobile": "cd mobile && npm install",
    "dev:backend": "cd backend && npm run dev",
    "dev:web": "cd web && npm run dev",
    "dev:mobile": "cd mobile && npm start",
    "setup": "npm run install:all",
    "setup:backend": "cd backend && npm install && npm run prisma:generate",
    "setup:web": "cd web && npm install",
    "setup:mobile": "cd mobile && npm install"
  },
  "keywords": [
    "attendance",
    "mobile",
    "web",
    "react-native",
    "react",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@expo/ngrok": "^4.1.3"
  }
}
